@page
@model HoangMinhDuongRazorPages.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card p-4 shadow-lg rounded-4" style="background-color: #ffffff;">
            <div class="text-center mb-2">
                <h2 class="fw-bold mb-0">Login</h2>
                <p class="text-muted mt-1">Welcome back! Please login to your account.</p>
            </div>
            <form method="post" novalidate>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger text-center fw-semibold" role="alert">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label fw-semibold">Email</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-envelope text-primary"></i></span>
                        <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label fw-semibold">Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-lock text-primary"></i></span>
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2 mt-3 fw-semibold">
                    <i class="fas fa-sign-in-alt me-2"></i> Login
                </button>
            </form>
        </div>
    </div>
</div>