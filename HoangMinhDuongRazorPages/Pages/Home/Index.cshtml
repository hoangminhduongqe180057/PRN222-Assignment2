@page
@model HoangMinhDuongRazorPages.Pages.Home.IndexModel

@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background: linear-gradient(135deg, #f0f4f8, #e0e7f0);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .home-card {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .home-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.15);
        }

    .home-header {
        background: linear-gradient(90deg, #1e3c72, #2a5298);
        color: #fff;
        border-top-left-radius: 16px;
        border-top-right-radius: 16px;
        padding: 1.5rem;
    }

    .home-body {
        padding: 2rem;
    }

    .home-icon {
        font-size: 3rem;
        color: #2a5298;
    }

    .home-metric {
        font-size: 1.25rem;
        font-weight: 600;
        margin-top: 1rem;
    }

    .home-btn {
        margin-top: 2rem;
        font-weight: 600;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
    }
</style>

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
        <div class="card home-card">
            <div class="home-header text-center">
                <h2 class="mb-0">Welcome to FU News</h2>
            </div>
            <div class="home-body text-center">
                <div class="home-icon mb-3">
                    <i class="fas fa-newspaper"></i>
                </div>
                <h3 class="mb-3">Hello, <span class="text-primary">@ViewData["UserFullName"]</span>!</h3>
                <p class="text-muted">@ViewData["Message"]</p>

                @if (User.IsInRole("Admin"))
                {
                    <div class="home-metric">Total Accounts: @ViewData["TotalAccounts"]</div>
                    <a asp-page="/Admin/Index" class="btn btn-primary home-btn">
                        <i class="fas fa-users me-2"></i> Manage Accounts
                    </a>
                }
                else if (User.IsInRole("Staff"))
                {
                    <div class="home-metric">Total News Managed: @ViewData["TotalNews"]</div>
                    <a asp-page="/Staff/Index" class="btn btn-primary home-btn">
                        <i class="fas fa-folder-open me-2"></i> Manage Categories
                    </a>
                }
                else if (User.IsInRole("Lecturer"))
                {
                    <div class="home-metric">Active News: @ViewData["ActiveNewsCount"]</div>
                    <a asp-page="/News/Index" class="btn btn-primary home-btn">
                        <i class="fas fa-eye me-2"></i> View News
                    </a>
                }
            </div>
        </div>
    </div>
</div>